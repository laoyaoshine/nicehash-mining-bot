# NiceHash 自动化挖矿机器人配置文件
# 请复制此文件为 config.ini 并填入您的实际配置

[api]
# NiceHash API配置（必需）
api_key = your_nicehash_api_key
api_secret = your_nicehash_api_secret
org_id = your_nicehash_org_id

# 其他API密钥（可选，用于提高数据获取成功率）
coingecko_api_key = your_coingecko_api_key
cryptocompare_api_key = your_cryptocompare_api_key
coinmarketcap_api_key = your_coinmarketcap_api_key

[trading]
# 交易设置
profit_threshold = 0.01
max_orders = 5
order_amount = 0.001
min_profit_margin = 0.05

# NiceHash市场选择（auto=自动选择，EU=欧洲市场，US=美国市场，both=双市场）
nicehash_market = both

# 订单类型
order_type = STANDARD

[data_sources]
# 数据源优先级设置
price_sources = coingecko,cryptocompare,coinmarketcap,whattomine
profit_sources = whattomine,nicehash
fee_sources = nicehash

# 缓存设置
cache_ttl = 300
cache_size = 1000

[logging]
# 日志设置
log_level = INFO
log_file = mining_bot.log
log_format = %(asctime)s - %(levelname)s - %(message)s

[performance]
# 性能设置
api_timeout = 30
max_retries = 3
rate_limit_delay = 1.0
concurrent_requests = 5

[monitoring]
# 监控设置
enable_monitoring = true
monitor_interval = 60
alert_threshold = 0.1

[offline_mode]
# 离线模式（测试用）
offline_mode = false
simulate_orders = true
simulate_profits = true

[advanced]
# 高级设置
enable_dual_market = true
auto_switch_market = true
profit_calculation_method = detailed
risk_management = conservative
